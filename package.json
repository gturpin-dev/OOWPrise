{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/package.json",
  "name": "oowprise",
  "version": "1.0.0",
  "description": "OOWPrise is a WordPress starter theme that heavily employs object-oriented programming techniques.",
  "scripts": {
    "start:theme": "wp-scripts start resources/scripts/index.js resources/scripts/editor.js --output-path=build/theme",
    "build:theme": "wp-scripts build resources/scripts/index.js resources/scripts/editor.js --output-path=build/theme",

    "start:blocks": "wp-scripts start --webpack-src-dir=resources/blocks --output-path=build/blocks --webpack-copy-php",
    "build:blocks": "wp-scripts build --webpack-src-dir=resources/blocks --output-path=build/blocks --webpack-copy-php",

    "theme-zip": "wp-scripts plugin-zip"
  },
  "files": [
    "app",
    "build",
    "template-parts",
    "vendor",
    "LICENCE.md",
    "composer.json",
    "composer.lock",
    "package.json",
    "package-lock.json",
    "screenshot.png",
    "style.css",
    "*.php"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gturpin-dev/OOWPrise.git"
  },
  "author": "Guillaume TURPIN",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gturpin-dev/OOWPrise/issues"
  },
  "homepage": "https://github.com/gturpin-dev/OOWPrise#readme",
  "dependencies": {
    "@wordpress/scripts": "^25.3.0"
  }
}
